<Window x:Class="JuegoDeMemoria.Views.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resultados"
        Width="720"
        Height="520"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF6A1B9A" Offset="0.0"/>
                <GradientStop Color="#FF9E9D24" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="dataGridResultados" Grid.Row="0" AutoGenerateColumns="True" CanUserAddRows="False" Margin="0 0 0 10">
            <DataGrid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF5F7FA" Offset="0.0"/>
                    <!-- Blanco azulado -->
                    <GradientStop Color="#FFB3CEA0" Offset="1.0"/>
                    <!-- Lavanda muy claro -->
                </LinearGradientBrush>
            </DataGrid.Background>
        </DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button x:Name="btnRefrescar" Content="Refrescar" Width="100" Margin="5" Click="btnRefrescar_Click" FontWeight="Bold" FontFamily="Sans Serif Collection" Background="#FF8A51B8"/>
            <Button x:Name="btnExportarCSV" Content="Exportar CSV" Width="140" Margin="5" Click="btnExportarCSV_Click" FontWeight="Bold" FontFamily="Sans Serif Collection" Background="#FFABB21F"/>
        </StackPanel>
    </Grid>
</Window>
