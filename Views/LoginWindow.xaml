<Window x:Class="JuegoDeMemoria.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión - JUEGO DE MEMORIA"
        Height="380"
        Width="420"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF6B8EFF" Offset="0.0"/>
                <GradientStop Color="#FF8A2BE2" Offset="0.25"/>
                <GradientStop Color="#FF20B2AA" Offset="0.5"/>
                <GradientStop Color="#FF32CD32" Offset="0.75"/>
                <GradientStop Color="#FFFFD700" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBlock Text="JUEGO DE MEMORIA" FontSize="22" FontWeight="Bold" FontFamily="Stencil" />

        <StackPanel Grid.Row="2" HorizontalAlignment="Left" Margin="5 0 0 0">
            <TextBlock Text="Usuario:" FontFamily="Cascadia Mono"/>
            <TextBox x:Name="txtUsuario" Height="28" Cursor="" Width="300"/>
            <TextBlock Text="Contraseña:" FontFamily="Cascadia Mono" Margin="0 5 0 0"/>
            <PasswordBox x:Name="pwdContrasena" Height="28" Margin="0 5 0 10" Width="300"/>
        </StackPanel>

        <Button x:Name="btnLogin" Grid.Row="4" Content="Ingresar" Width="150" Height="36" Click="btnLogin_Click" Cursor="Hand" Background="#FF20D6C7" FontFamily="Sans Serif Collection"/>
        <Button x:Name="btnRegistrar" Grid.Row="6" Content="Crear Cuenta" Height="36" Width="150" Click="btnRegistrar_Click" Cursor="Hand" Background="#FFA020F0" FontFamily="Sans Serif Collection" Margin="6,6,6,0"/>
    </Grid>
</Window>
