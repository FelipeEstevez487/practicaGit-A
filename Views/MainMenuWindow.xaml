<Window x:Class="JuegoDeMemoria.Views.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú Principal - JUEGO DE MEMORIA"
        Width="460"
        Height="430"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF00F260" Offset="0.0"/>
                <GradientStop Color="#FF0575E6" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <StackPanel>
            <Label x:Name="lblBienvenida" FontSize="20" Foreground="#FF1A237E" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 20" FontFamily="Bodoni MT"/>
            <TextBlock Text="Seleccionar nivel:" FontSize="16" FontFamily="Cascadia Mono"/>
            <ComboBox x:Name="cmbNivel" Width="220" Margin="0 5 0 20" FontFamily="Sitka Display" Cursor="Hand"/>

            <Button x:Name="btnJugar" Content="Jugar" Height="40" Click="btnJugar_Click" 
            Background="#FF4CAF50" Foreground="White" FontWeight="Bold" FontFamily="Sans Serif Collection" Cursor="Hand"/>

            <Button x:Name="btnGestionImagenes" Content="Gestionar Imágenes" Height="40" Click="btnGestionImagenes_Click" 
            Background="#FF2196F3" Foreground="White" FontWeight="Bold" FontFamily="Sans Serif Collection" Cursor="Hand"/>

            <Button x:Name="btnVerResultados" Content="Resultados" Height="40" Click="btnVerResultados_Click" 
            Background="#FF00BCD4" Foreground="White" FontWeight="Bold" FontFamily="Sans Serif Collection" Cursor="Hand"/>

            <Button x:Name="btnCerrarSesion" Content="Cerrar Sesión" Height="36" Click="btnCerrarSesion_Click" 
            Background="#FFF44336" Foreground="White" FontWeight="Bold" FontFamily="Sans Serif Collection" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
