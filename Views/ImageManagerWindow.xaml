<Window x:Class="JuegoDeMemoria.Views.ImageManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Imágenes"
        Width="700"
        Height="480"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 10">
            <Button x:Name="btnAgregar" Content="Agregar Imágenes" Width="160" Click="btnAgregar_Click"/>
            <Button x:Name="btnEliminarSeleccionadas" Content="Eliminar Seleccionadas" Width="180" Click="btnEliminarSeleccionadas_Click"/>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="wrapPanelThumbnails"/>
        </ScrollViewer>
    </DockPanel>
</Window>
