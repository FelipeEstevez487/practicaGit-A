<Window x:Class="JuegoDeMemoria.Views.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Juego de Memoria" Width="900" Height="750" WindowStartupLocation="CenterScreen">
    <Grid Margin="10" Background="#FFB2DCDC">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 10" Background="#FF47CEBF">
            <Label x:Name="lblMovimientos" Content="Movimientos: 0" FontSize="16" Margin="10" FontFamily="Cascadia Mono" Foreground="#FF070809"/>
            <Label x:Name="lblTiempo" Content="Tiempo: 0s" FontSize="16" Margin="10" FontFamily="Cascadia Mono" Foreground="#FF070809"/>
        </StackPanel>

        <UniformGrid x:Name="TableroGrid" Grid.Row="1" Rows="4" Columns="4" Margin="10"/>

        <Button Grid.Row="2" x:Name="btnAbandonar" Content="Abandonar" Height="40" Width="160" Background="#FF00C8FF" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Click="btnAbandonar_Click" FontFamily="Sans Serif Collection"/>
    </Grid>
</Window>
